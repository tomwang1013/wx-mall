.order {
  padding: 20rpx;
  position: relative;
  display: flex;
  background-color: #fff;
}

.order image {
  width: 156rpx;
  height: 156rpx;
  margin-right: 20rpx;
}

.name {
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #888;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
}

.add-comment {
  margin: 30rpx;
  border-radius: 6rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.2);
  background-color: #fff;
}

textarea {
  padding: 20rpx;  
  width: 650rpx;
  height: 300rpx;
  font-size: 32rpx;
}

.textarea-placeholder {
  color: #888;
}

.choose-image {
  width: 43rpx;
  height: 43rpx;
  margin-left: 20rpx;
}

.preview-image {
  width: 128rpx;
  height: 128rpx;
}

.preview-wrapper {
  margin: 30rpx;
}

.submit-comment {
  width: 196rpx;
  margin: auto;
  line-height: 72rpx;
  background-color: yellow;
  text-align: center;
  font-size: 32rpx;
}

.submit-comment.disable {
  background-color: rgba(128, 128, 32, 0.671);
  color: #ccc;
}