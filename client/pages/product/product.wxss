.product {
  padding: 30rpx;
  background-color: #fff;
}

.product-source {
  font-size: 28rpx;
  color: #888;
}

.product-footer {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
}

.money-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: yellow;
  text-align: center;
}

.price {
  margin-left: 10rpx;
}

.service-comments {
  margin: 30rpx;
  padding: 25rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.2)
}

.service {
  padding: 20rpx 0 40rpx;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.check-icon {
  width: 22rpx;
  height: 16rpx;
  margin-right: 20rpx;
}

.comments {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.comments-title {
  font-size: 32rpx;
}

.comments-cnt {
  font-size: 28rpx;
  color: #888;
  margin-left: auto;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 11rpx;
  height: 18rpx;
}

.operations {
  position: fixed;
  width: 100%;
  display: flex;
  bottom: 0;
}

.op {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 100rpx;
  background-color: yellow;
}

.op.active {
  background-color: orange;
}