.top {
  display: flex;
  margin: 20rpx;
  align-items: center;
  font-size: 32rpx;
}

.total-check-mark {
  width: 42rpx;
  margin-right: 10rpx;
  line-height: 42rpx;
  height: 42rpx;
  font-size: 0;
  border-radius: 50%;
  text-align: center;
}

.check-icon {
  width: 22rpx;
  height: 16rpx;
  vertical-align: middle;
}

.to-edit {
  margin-left: auto;
}

.order {
  position: relative;
  display: flex;
  align-items: center;
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 3rpx 0px rgba(0,0,0,.2);
  border-radius: 6rpx;
}

.product-image {
  width: 156rpx;
  height: 156rpx;
  margin: 0 20rpx;
}

.name {
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #888;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
}

.count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.settlement-bar {
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 96rpx;
  padding-left: 48rpx;
  align-items: center;
  font-size: 32rpx;
  background-color: #fff;
}

.total-select-text {
  margin-right: auto;
}

.total-price-text {
  color: #888;
}

.total-price-number {
  margin: 0 10rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.settle {
  width: 196rpx;
  margin-left: 30rpx;
  line-height: 96rpx;
  background-color: yellow;
  text-align: center;
  font-size: 36rpx;
}